<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ui.UpdateProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:background="@color/light_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp">


                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_back" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Update Profile"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_18sdp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_right_svg"
                    android:visibility="invisible"
                    app:tint="@color/white" />

            </RelativeLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_image"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/user_noti_2"
                            android:visibility="gone">


                        </de.hdodenhof.circleimageview.CircleImageView>

                        <!--            <ImageView-->
                        <!--                android:scaleType="fitXY"-->
                        <!--                android:id="@+id/user_image"-->
                        <!--                android:layout_width="@dimen/_100sdp"-->
                        <!--                android:layout_height="@dimen/_100sdp"-->
                        <!--                android:src="@drawable/user"/>-->


                        <ImageView
                            android:id="@+id/edit_image"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_35sdp"
                            android:layout_marginTop="-35dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_camera_alt_24"
                            android:visibility="gone"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/user_name_heaading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textFontWeight="600"
                            android:textSize="@dimen/_17sdp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="#D9E6F2"
                            android:visibility="gone" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Name"
                            android:textColor="@color/grey_font"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_12sdp" />


                        <EditText
                            android:id="@+id/update_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/shape_edittext15r"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Your Name"
                            android:inputType="text"
                            android:padding="@dimen/_13sdp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/grey_font"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Email"
                            android:textColor="@color/grey_font"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone" />


                        <EditText
                            android:id="@+id/update_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/shape_edittext15r"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Your Email"
                            android:inputType="text"
                            android:padding="@dimen/_13sdp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/grey_font"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Phone"
                            android:textColor="@color/grey_font"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_12sdp" />


                        <EditText
                            android:id="@+id/update_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/shape_edittext15r"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Your Phone"
                            android:inputType="text"
                            android:padding="@dimen/_13sdp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/grey_font"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/update_save_changes"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        app:cardBackgroundColor="@color/color_primary"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Save"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>